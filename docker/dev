FROM ubuntu:latest

ARG user=niko

RUN apt-get update && \
    apt-get -y upgrade && \
    apt-get -y install sudo man curl tree vim git tmux entr

RUN useradd --shell /bin/bash --create-home $user&& \
    adduser $user sudo && \
    echo "niko:changeme" | chpasswd

ENV TERM=xterm-256color
USER $user
WORKDIR /home/$user
