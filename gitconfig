[user]
    name = Niko Steinhoff
    email = niko@riskident.com
[push]
    default = simple
[alias]
    lo      = log --graph --decorate --format='%C(auto)%h%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    loa     = log --graph --decorate --all --format='%C(auto)%h%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lf      = log --graph --decorate --date=short --format='%C(auto)%h%d %s %C(green)(%cd) %C(blue)<%an>%Creset'
    lfa     = log --graph --decorate --all --date=short --format='%C(auto)%h%d %s %C(green)(%cd) %C(blue)<%an>%Creset'
    lol     = log --graph --decorate --pretty=oneline --abbrev-commit
    lola    = log --graph --decorate --pretty=oneline --abbrev-commit --all
    d       = difftool
    stl    = !git --no-pager stash list
    brl    = !git --no-pager branch --list
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
    editor = vim
[difftool]
    prompt = true
[mergetool]
    prompt = true

