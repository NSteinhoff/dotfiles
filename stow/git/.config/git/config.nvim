[difftool "nvimdiff"]
	cmd 		= nvim -d $LOCAL $REMOTE
[mergetool "nvim"]
	cmd 		= nvim $MERGED
[mergetool "nvimdiff2"]
	cmd 		= nvim -d $LOCAL $MERGED $REMOTE -c '2wincmd w' -c 'wincmd J'
[mergetool "nvimdiff"]
	cmd 		= nvim -d $LOCAL $BASE $REMOTE $MERGED -c '2wincmd w' -c '$wincmd w' -c 'wincmd J'
