[user]
    name = Niko Steinhoff
    email = niko.steinhoff@gmail.com
[push]
    default = current
[alias]
    lo          = log --graph --decorate --format='%C(auto)%h%d %s %C(green)(%cr) %C(bold blue)<%an>%Creset'
    loa         = log --graph --decorate --all --format='%C(auto)%h%d %s %C(green)(%cr) %C(bold blue)<%an>%Creset'
    lf          = log --graph --decorate --date=short --format='%C(auto)%h%d %s %C(green)(%cd) %C(blue)<%an>%Creset'
    lfa         = log --graph --decorate --all --date=short --format='%C(auto)%h%d %s %C(green)(%cd) %C(blue)<%an>%Creset'
    di          = diff
    dis         = diff --staged
    diffw       = diff --color-words
    stashes     = !git --no-pager stash list
    branches    = !git --no-pager branch --list
    prull       = !git fetch --prune && git pull --ff-only
    fresh       = !git remote update --prune && git checkout master && git pull --ff-only && git branch --merged | grep -v '\\*\\|master' | xargs git branch -d
    review      = diff origin/master...HEAD
    ctags       = !.git/hooks/ctags
    watch       = !git ls-files | entr
    subdate     = submodule update --remote --checkout
    subclean    = submodule foreach 'git clean -f'
[color]
    pager = true
    ui = auto
    status = auto
    diff = auto
    branch = auto
    showBranch = auto
    interactive = auto
    grep = auto
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
[core]
    editor = nvim
[commit]
    verbose = true
[difftool]
    prompt = true
    trustExitCode = true
[mergetool]
    prompt = true
    trustExitCode = true

[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[mergetool "nvimdiff"]
    # The commands move the $MERGED result window down and makes it full width
    # -c '$wincmd w'    -> (ctrl-w) execute window command in the last window
    # -c 'wincmd J'     -> (ctrl-J) move window down
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvimdiff2"]
    cmd = nvim -d $LOCAL $MERGED $REMOTE
[init]
    templatedir = ~/.config/git/template
[rerere]
    enabled = true
[pull]
	ff = only
