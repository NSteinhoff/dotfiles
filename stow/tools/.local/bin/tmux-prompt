#!/bin/bash
# vim: ft=sh

[[ -n "${TMUX}" ]] || exit

tmuxinfo="$(tmux lsw -F '#S:#I:#P #{window_active}' | grep '1$' | cut -d' ' -f1)"
case $tmuxinfo in
    default:*) shortinfo="*${tmuxinfo#default}" ;;
    [0123456789]*:1:1) shortinfo="T" ;;
    *) shortinfo="${tmuxinfo}" ;;
esac
echo -en "[${cyan}${shortinfo}${reset}] "
