#!/bin/bash
color=$(colorscheme -p)

mode=unknown
case $color in
    *-light) mode=light; othermode=dark;;
    *-dark ) mode=dark;  othermode=light;;
esac

if [[ "$mode" == unknown ]]; then
    echo "Colorscheme '$color' has no light/dark variants."
    exit 1
fi

newmode=${1:-$othermode}
if [[ $newmode != $mode ]]; then
    colorscheme "${color%-$mode}-$newmode"
fi
