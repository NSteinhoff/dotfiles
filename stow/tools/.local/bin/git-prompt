#!/bin/bash
# vim: ft=sh

branch_only=false
brackets=false

git_unstaged_changes() {
    [ -n "$(git diff --shortstat 2> /dev/null | tail -n1)" ]
}

git_uncommitted_changes() {
    [ -n "$(git diff --shortstat --staged 2> /dev/null | tail -n1)" ]
}

git_stashed_changes() {
    [ -n "$(git stash list 2> /dev/null | tail -n1)" ]
}

branch_name() {
    name="$(git branch 2>/dev/null)" || return 1
    echo "$name" | sed -e '/^[^*]/d' -e 's/^* //'
}

remote_branch() {
    remote=$(git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null)
    echo -n "$remote"
}

branch_status() {
    status=$(
        git status 2>/dev/null |
        grep '^Your branch ' |
        grep -o 'ahead\|behind\|diverged\|up to date'
    ) || return 1

    case $status in
        diverged) echo -n " <>" ;;
        ahead) echo -n " >" ;;
        behind) echo -n " <" ;;
        'up to date') ;;
        # 'up to date') echo -n "*" ;;
    esac
}

main() {
    branch=$(branch_name) || return 0
    [ -n "$branch" ] || return 1
    if $branch_only; then
        echo -n "["
        echo -n "${branch}"
        echo -n "]"
        return 0
    fi

    remote=$(remote_branch)
    if [ -n "$remote" ]; then
        remote_name="${remote#*/}"
        remote_indicator="$(branch_status)"
        if [ "$remote_name" != "$branch" ]; then
            remote_indicator="$remote_indicator $remote_name"
        fi
    fi

    if $(git_unstaged_changes); then unstaged="\033[0;31m +"; fi
    if $(git_uncommitted_changes); then uncommitted="\033[0;32m +"; fi
    if $(git_stashed_changes); then stashed="\033[0;33m $"; fi

    $brackets && echo -n "[" || echo -n " on "
    echo -en "\033[1;35m"
    echo -en "${branch}"
    echo -en "${remote_indicator}"
    echo -en "$unstaged$uncommitted$stashed"
    echo -en "\033[0m"
    $brackets && echo -n "]"
}

main || exit 1
