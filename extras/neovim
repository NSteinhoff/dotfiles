set -e

# Python 2
apt install python-pip
python2 -m pip install pynvim

# Python 3
pyenv virtualenvs | grep py3nvim || pyenv virtualenv 3.7.3 py3nvim && pyenv activate py3nvim && pip install pynvim

# Ruby
$HOME/dotfiles/extras/ruby
gem install neovim

# Nodejs
$HOME/dotfiles/extras/nodejs
npm install -g neovim
